@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detail Produk</title>
</head>
<body>
    <div>
        <h1>Detail Barang</h1>
        <table>
            <tr>
                <td>ID</td>
                <td>: @ViewBag.detailbarang.Id</td>
            </tr>
            <tr>
                <td>Nama</td>
                <td>: @ViewBag.detailbarang.Nama</td>
            </tr>
            <tr>
                <td>Harga</td>
                <td>: Rp @ViewBag.detailbarang.Harga</td>
            </tr>
            <tr>
                <td>Stok</td>
                <td>: @ViewBag.detailbarang.Stock</td>
            </tr>
        </table>
        @Html.ActionLink("Back", "../barang")
    </div>
</body>
</html>
